---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import SEO from '../components/SEO.astro';
import PricingSection from '../components/PricingSection';
import FAQSection from '../components/FAQSection';
import { generateBreadcrumbSchema, generateProductSchema } from '../utils/schema';

const [serviceInfoEntries, faqItems] = await Promise.all([
  getCollection('service-info'),
  getCollection('faq'),
]);

const serviceInfo = serviceInfoEntries[0];
const data = serviceInfo?.data || {};
const baseUrl = data.siteUrl || Astro.url.origin;

const pricingFaq = faqItems
  .filter(f => f.data.category === 'pricing' || !f.data.category)
  .slice(0, 5);

const productSchema = generateProductSchema({
  name: `${data.brandName} IPTV Subscription`,
  description: `Premium IPTV service with ${data.channelCount}+ channels and ${data.vodCount}+ movies`,
  brand: data.brandName,
  offers: [
    { priceCurrency: 'USD', price: 35, name: 'Starter Package - 1 Device', url: `${baseUrl}/pricing` },
    { priceCurrency: 'USD', price: 45, name: 'Standard Package - 1 Device', url: `${baseUrl}/pricing` },
    { priceCurrency: 'USD', price: 79, name: 'Premium Package - 1 Device', url: `${baseUrl}/pricing` },
  ],
});

const breadcrumbSchema = generateBreadcrumbSchema([
  { name: 'Home', url: baseUrl },
  { name: 'Pricing', url: `${baseUrl}/pricing` },
]);
---

<BaseLayout>
  <SEO
    slot="head"
    title={`Pricing - ${data.brandName}`}
    description={`Explore ${data.brandName} pricing plans. Choose from flexible subscription options with ${data.channelCount}+ live channels and ${data.vodCount}+ movies & series.`}
    canonicalURL={`${baseUrl}/pricing`}
    schema={[productSchema, breadcrumbSchema]}
  />

  <section class="py-16 bg-gradient-to-b from-background to-muted/30">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">
        Choose Your Perfect Plan
      </h1>
      <p class="text-xl text-muted-foreground max-w-2xl mx-auto">
        Flexible pricing options designed to fit your entertainment needs. All plans include full access to our premium features.
      </p>
    </div>
  </section>

  <PricingSection
    client:load
    primaryColor={data.primaryColor}
    ctaLink={data.ctaUrl || '#order'}
    defaultDevice={1}
    showHeader={false}
    paymentSettings={data.paymentSettings}
    brandName={data.brandName}
  />

  <section class="py-16 bg-muted/30">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-8">All Plans Include</h2>
      <div class="grid md:grid-cols-3 gap-8 max-w-4xl mx-auto">
        <div class="text-center">
          <div class="w-12 h-12 rounded-full bg-primary/10 flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
          </div>
          <h3 class="font-semibold mb-2">{data.channelCount}+ Live Channels</h3>
          <p class="text-sm text-muted-foreground">Access to premium sports, news, and entertainment channels worldwide</p>
        </div>
        <div class="text-center">
          <div class="w-12 h-12 rounded-full bg-primary/10 flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 4v16M17 4v16M3 8h4m10 0h4M3 12h18M3 16h4m10 0h4" />
            </svg>
          </div>
          <h3 class="font-semibold mb-2">{data.vodCount}+ Movies & Series</h3>
          <p class="text-sm text-muted-foreground">Unlimited access to our extensive on-demand library</p>
        </div>
        <div class="text-center">
          <div class="w-12 h-12 rounded-full bg-primary/10 flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="font-semibold mb-2">24/7 Customer Support</h3>
          <p class="text-sm text-muted-foreground">Expert assistance whenever you need it via chat, email, or phone</p>
        </div>
      </div>
    </div>
  </section>

  {pricingFaq.length > 0 && (
    <section class="py-16">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold text-center mb-12">Frequently Asked Questions</h2>
        <FAQSection client:visible items={pricingFaq.map(f => ({ question: f.data.question, answer: f.body || '' }))} showHeader={false} />
      </div>
    </section>
  )}
</BaseLayout>
